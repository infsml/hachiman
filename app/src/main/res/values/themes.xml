<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hachiman" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prim_orange</item>
        <item name="colorPrimaryVariant">@color/sec_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prim_yellow</item>
        <item name="colorSecondaryVariant">@color/sec_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="big_head">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="btn_orange_style">
        <item name = "android:background">@drawable/btn_yellow_orange</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">18sp</item>
    </style>
    <style name="btn_orange_stroke_style" parent="btn_orange_style">
        <item name="android:background">@drawable/btn_yellow_orange_stroke</item>
    </style>
</resources>